generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Curricullum {
    id          Int      @id @default(autoincrement())
    subjects    Subject[]
    students    Student[]
}

model Subject {
    id           Int      @id @default(autoincrement())
    name         String
    curricullums Curricullum[]
    students     Student[]
    grades       Grade[]
}

model Student {
    id            Int      @id @default(autoincrement())
    name          String
    curricullumId Int
    subjects      Subject[]
    grades        Grade[]
    curricullums  Curricullum @relation(fields: [curricullumId], references: [id])
}

model Grade {
    id          Int      @id @default(autoincrement())
    value       Int
    subjectId   Int
    studentId   Int
    subjects    Subject   @relation(fields: [subjectId], references: [id])
    students    Student   @relation(fields: [studentId], references: [id])
}
