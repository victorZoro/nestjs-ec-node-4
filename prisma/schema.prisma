generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Curricullum {
  id       Int                  @id @default(autoincrement())
  subjects CurricullumSubject[]
}

model Subject {
  id           Int                  @id @default(autoincrement())
  name         String
  grades       Grade[]
  curricullums CurricullumSubject[]
}

model Student {
  id            Int     @id @default(autoincrement())
  name          String
  curricullumId Int
  grades        Grade[]
}

model CurricullumSubject {
  id            Int         @id @default(autoincrement())
  curricullumId Int
  subjectId     Int
  curricullums  Curricullum @relation(fields: [curricullumId], references: [id])
  subjects      Subject     @relation(fields: [subjectId], references: [id])

  @@unique([subjectId, curricullumId])
}

model Grade {
  id        Int       @id @default(autoincrement())
  value     Int
  updatedAt DateTime? @default(now())
  subjectId Int
  studentId Int
  subjects  Subject   @relation(fields: [subjectId], references: [id])
  students  Student   @relation(fields: [studentId], references: [id])
}
